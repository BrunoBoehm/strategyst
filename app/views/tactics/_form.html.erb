<%= form_for(@tactic) do |f| %>
  <% if @tactic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tactic.errors.count, "error") %> prohibited this tactic from being saved:</h2>

      <ul>
      <% @tactic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h3 class="text-center">Tactic Description</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      
      <div class="input-group">
        <%= f.label :pitch, class: "input-group-addon" %>
        <%= f.text_field :pitch, class: "form-control", placeholder: "What's the action?" %>
      </div>
      <div class="input-group">
        <%= f.label :importance %>
        <%= f.select :importance, options_for_select(Tactic.importances.collect { |s| [s[0].humanize, s[0]] }) %>
      </div>  
      <div class="input-group">
        <%= f.label :description, class: "input-group-addon" %>
        <%= f.text_area :description, class: "form-control", rows: 4 %>
      </div>
      <div class="input-group">
        <%= f.label :medium, class: "input-group-addon" %>
        <%= f.text_field :medium, class: "form-control", placeholder: "On what channel will this tactic be deployed?" %>
      </div>
      <div class="input-group">
        <%= f.label :kpi, class: "input-group-addon" %>
        <%= f.text_area :kpi, class: "form-control", placeholder: "Key Performance Indicator" %>
      </div>

    </div>
  </div>
</div>


<h3 class="text-center">Logistics</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      
      <div class="input-group">
        <%= f.label :frequency, class: "input-group-addon" %>
        <%= f.text_field :frequency, class: "form-control" %>
      </div>
      <div class="input-group">
        <%= f.label :start %>
        <%= f.date_select :start, class: "form-control" %>
      </div>
      <div class="input-group">
        <%= f.label :end %>
        <%= f.date_select :end, class: "form-control" %>
      </div>
      <div class="input-group">
        <%= f.label :budget, class: "input-group-addon" %>
        <%= f.number_field :budget, class: "form-control" %>
      </div>
      
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      
      <div class="input-group">
        <%= f.label :strategy_id %>
        <%= f.collection_select :strategy_id, Strategy.order(:pitch), :id, :pitch, include_blank: "Nothing selected" %>
      </div>
      <div class="input-group">
        <%= f.label :poc_id, "POC in charge" %>
        <%= f.collection_select :poc_id, Poc.order(:name), :id, :name, include_blank: "Nothing selected" %>
      </div>
      
    </div>
  </div>
</div>



  <div class="actions text-center">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
