      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center" id="gridSystemModalLabel">Create a New Company</h4>
      </div>

      <div class="modal-body">
        <p class="text-center">Fill in all the necessary details about this new company</p>
        <%= render 'form' %>
      </div>

    </div>
  </div>
</div>
