<p id="notice"><%= notice %></p>

<h1>Listing Personas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Img</th>
      <th>Role</th>
      <th>Jobs</th>
      <th>Pains</th>
      <th>Gains</th>
      <th>Touch points</th>
      <th>Quotes</th>
      <th>Age</th>
      <th>Income</th>
      <th>Education</th>
      <th>Location</th>
      <th>Story</th>
      <th>Value proposition</th>
      <th>Segment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.name %></td>
        <td><%= persona.img %></td>
        <td><%= persona.role %></td>
        <td><%= persona.jobs %></td>
        <td><%= persona.pains %></td>
        <td><%= persona.gains %></td>
        <td><%= persona.touch_points %></td>
        <td><%= persona.quotes %></td>
        <td><%= persona.age %></td>
        <td><%= persona.income %></td>
        <td><%= persona.education %></td>
        <td><%= persona.location %></td>
        <td><%= persona.story %></td>
        <td><%= persona.value_proposition %></td>
        <td><%= persona.segment %></td>
        <td><%= link_to 'Show', persona %></td>
        <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
        <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

