<%= form_for(@poc) do |f| %>
  <% if @poc.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poc.errors.count, "error") %> prohibited this poc from being saved:</h2>

      <ul>
      <% @poc.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">    
      <div class="input-group">
        <%= f.label :name, class: "input-group-addon" %>
        <%= f.text_field :name, class: "form-control", placeholder: "John Snow" %>
      </div>
      <div class="input-group">
        <%= f.label :title, class: "input-group-addon" %>
        <%= f.text_field :title, class: "form-control", placeholder: "Job position in the company" %>
      </div>
      <div class="input-group">
        <%= f.label :role, class: "input-group-addon" %>
        <%= f.text_field :role, class: "form-control", placeholder: "Role as Point of Contact" %>
      </div>
      <div class="input-group">
        <%= f.label :img, class: "input-group-addon" %>
        <%= f.url_field :img, class: "form-control", placeholder: "Profil picture URL" %>
      </div>
      <div class="input-group">
        <%= f.label :linkedin, class: "input-group-addon" %>
        <%= f.url_field :linkedin, class: "form-control", placeholder: "linkedin.com/" %>
      </div>
      <div class="input-group">
        <%= f.label :twitter, class: "input-group-addon" %>
        <%= f.url_field :twitter, class: "form-control", placeholder: "twitter.com/" %>
      </div>
      <div class="input-group">
        <%= f.label :telephone, class: "input-group-addon" %>
        <%= f.telephone_field :telephone, class: "form-control" %>
      </div>
      <div class="input-group">
        <%= f.label :email, class: "input-group-addon" %>
        <%= f.email_field :email, class: "form-control", placeholder: "john.snow@throne.inc" %>
      </div>
      <div class="input-group">
        <label>POC for Company</label>
        <%= f.collection_select :company_id, Company.order(:name), :id, :name, include_blank: "Nothing selected" %>
      </div>      
    </div>
  </div>
</div>      
  <div class="actions text-center">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
