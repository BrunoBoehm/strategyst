<%= form_for(@strategy) do |f| %>
  <% if @strategy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@strategy.errors.count, "error") %> prohibited this strategy from being saved:</h2>

      <ul>
      <% @strategy.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      
      <div class="input-group">
        <%= f.label :pitch, class: "input-group-addon" %>
        <%= f.text_area :pitch, class: "form-control", placeholder: "Strategy 3-second-pitch" %>
      </div>
      <div class="input-group">
        <%= f.label :description, class: "input-group-addon" %>
        <%= f.text_area :description, class: "form-control", placeholder: "Description of this strategy", rows: 5 %>
      </div>
      <div class="input-group">
        <%= f.label :ksf, class: "input-group-addon" %>
        <%= f.text_area :ksf, class: "form-control", placeholder: "1. Key Success Factor 1\n2. Key Success Factor 2\n...", rows: 3 %>
      </div>
      <div class="input-group">
        <%= f.label :objective_id %>
        <%= f.collection_select :objective_id, Objective.order(:specific), :id, :specific, include_blank: "Nothing selected"%>
      </div>

    </div>
  </div>
</div>



  <div class="actions text-center">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
