<div class="row">
  <% strategies.each do |strategy| %>
    <div class="col-md-4">

      <div class="panel panel-danger">
        <!-- Default panel contents -->
        <div class="panel-heading animate">
          <h3 class="panel-title text-center"><%= strategy.pitch %></h3>
        </div>

        <!-- List group -->
        <ul class="list-group">
          <li class="list-group-item"><strong>Objective</strong><br> <%= link_to strategy.objective.specific, strategy.objective %></li>
          <li class="list-group-item"><strong>Description</strong><br> <%= simple_format strategy.description %></li>
          <li class="list-group-item"><strong>Key Success Factors</strong><br> <%= simple_format strategy.ksf %></li>
          <li class="list-group-item"><strong>Tactics</strong> <br>
            <ul>
              <% strategy.tactics.each do |tactic| %>
                <li><%= link_to tactic.pitch, tactic %> <br>
                  (prio <%= tactic.importance %>)
                </li>
              <% end %>
            </ul>
          </li>
        </ul>

        <div class="panel-body">


          <div class="btn-group pull-right" role="group" aria-label="...">
            <%= link_to "Add Tactic", new_strategy_tactic_path(strategy), class: "btn btn-sm btn-default" %>
            <%= link_to "Edit", edit_strategy_path(strategy), class: "btn btn-sm btn-default" %>
          </div>
          
        </div>
      </div>

    </div> <!-- close col-md-4 -->
  <% end %>
</div>   <!-- close row -->