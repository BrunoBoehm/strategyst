<%= form_for(@objective) do |f| %>
  <% if @objective.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@objective.errors.count, "error") %> prohibited this objective from being saved:</h2>

      <ul>
      <% @objective.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <div class="input-group">
        <%= f.label :title, class: "input-group-addon" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>      
      <div class="input-group">
        <%= f.label :specific, class: "input-group-addon" %>
        <%= f.text_area :specific, class: "form-control", rows: 4, placeholder: "What, who, when, where, how..." %>
      </div>
      <div class="input-group">
        <%= f.label :measurable, class: "input-group-addon" %>
        <%= f.text_area :measurable, class: "form-control", rows: 4, placeholder: "How do we measure success?" %>
      </div>
      <div class="input-group">
        <%= f.label :achievable, class: "input-group-addon" %>
        <%= f.text_area :achievable, class: "form-control", rows: 4, placeholder: "Why is the objective internally attainable and agreed upon? What can we do to reach it?" %>
      </div>
      <div class="input-group">
        <%= f.label :realistic, class: "input-group-addon" %>
        <%= f.text_area :realistic, class: "form-control", rows: 4, placeholder: "Are the internal context/external environment right?" %>
      </div>
      <div class="input-group">
        <%= f.label :timed %>
        <%= f.date_select :timed, class: "form-control" %>
      </div>
      <div class="input-group">
        <%= f.label :segment_id %>
        <%= f.collection_select :segment_id, Segment.order(:name), :id, :name, include_blank: "Nothing selected" %>
      </div>

    </div>
  </div>
</div>



  <div class="actions text-center">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
